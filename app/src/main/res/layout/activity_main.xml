<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

   <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       <TextView
               android:text="ForeGround Services"
               android:textColor="#000000"
               android:textSize="18dp"
               android:textStyle="bold"
               android:gravity="center_horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

       <LinearLayout
               android:orientation="horizontal"
               android:weightSum="2"
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           <Button
                   android:id="@+id/btn_for_startservice"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:text="Start Service"
                   android:layout_height="wrap_content"/>

           <Button
                   android:id="@+id/btn_for_stopservice"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:text="Start Service"
                   android:layout_height="wrap_content"/>

       </LinearLayout>


       <TextView
               android:layout_marginTop="20dp"
               android:text="BackGround Services"
               android:textColor="#000000"
               android:textSize="18dp"
               android:textStyle="bold"
               android:gravity="center_horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

       <LinearLayout
               android:orientation="horizontal"
               android:weightSum="2"
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           <Button
                   android:id="@+id/btn_back_startservice"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:text="Start Service"
                   android:layout_height="wrap_content"/>

           <Button
                   android:id="@+id/btn_back_stopservice"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:text="Start Service"
                   android:layout_height="wrap_content"/>

       </LinearLayout>


       <TextView
               android:layout_marginTop="20dp"
               android:text="Bind Services"
               android:textColor="#000000"
               android:textSize="18dp"
               android:textStyle="bold"
               android:gravity="center_horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

       <LinearLayout
               android:orientation="horizontal"
               android:weightSum="2"
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           <Button
                   android:id="@+id/btn_bind_startservice"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:text="Start Service"
                   android:layout_height="wrap_content"/>

           <Button
                   android:id="@+id/btn_bind_stopservice"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:text="Start Service"
                   android:layout_height="wrap_content"/>

       </LinearLayout>

       <TextView
               android:layout_marginTop="20dp"
               android:text="IntentServices"
               android:textColor="#000000"
               android:textSize="18dp"
               android:textStyle="bold"
               android:gravity="center_horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

       <LinearLayout
               android:orientation="horizontal"
               android:weightSum="2"
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           <Button
                   android:id="@+id/btn_intent_startservice"
                   android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_marginRight="50dp"
                   android:layout_marginLeft="50dp"
                   android:text="Start Intent Service"
                   android:layout_height="wrap_content"/>

       </LinearLayout>

       <LinearLayout
               android:orientation="horizontal"
               android:weightSum="2"
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:layout_height="200dp">

           <ProgressBar
                   android:id="@+id/downloadPD"
                   android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_height="wrap_content"
                   android:indeterminateOnly="true"
                   android:visibility="gone" />

           <ImageView
                   android:id="@+id/imgView"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="2"
                   android:scaleType="fitCenter" />

       </LinearLayout>

       <LinearLayout
               android:orientation="horizontal"
               android:weightSum="2"
               android:layout_marginBottom="100dp"
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           <Button
                   android:id="@+id/btn_brodcastwithService"
                   android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_marginRight="20dp"
                   android:layout_marginLeft="20dp"
                   android:text="Start Service With BroadCast Receiver"
                   android:layout_height="wrap_content"/>

       </LinearLayout>

   </LinearLayout>

</ScrollView>